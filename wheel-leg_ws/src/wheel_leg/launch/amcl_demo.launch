<launch>
  <!-- Map server -->
  <arg name="map_file" default="$(find pgm_map_creator)/maps/map.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!-- Localization -->
  <arg name="initial_pose_x" default="3.0"/>
  <arg name="initial_pose_y" default="9.0"/>
  <arg name="initial_pose_a" default="-1.5768"/>
  <arg name="custom_amcl_launch_file" default="$(find wheel_leg)/launch/robot_amcl.launch.xml"/> 

  <include file="$(arg custom_amcl_launch_file)">
    <arg name="initial_pose_x" value="$(arg initial_pose_x)"/>
    <arg name="initial_pose_y" value="$(arg initial_pose_y)"/>
    <arg name="initial_pose_a" value="$(arg initial_pose_a)"/>
  </include>

  <!-- Move base -->
 <include file="$(find wheel_leg)/launch/move_base.launch.xml"/>
</launch>
